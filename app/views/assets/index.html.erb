<div class="container mx-auto px-4">
  <h1 class="text-2xl font-semibold text-gray-600 mb-6">Asset List</h1>

  <div class="flex flex-wrap md:flex-nowrap justify-between items-center gap-4 mb-6">
    <!-- Status Filter -->
    <div>
      <%= form_with url: assets_path, method: :get, local: true do %>
        <div class="flex items-center space-x-2">
          <button type="submit" class="flex items-center">
            <%= select_tag :status, options_for_select([['All Status', '']] + Asset.statuses.keys.map { |s| [s.titleize, s] }, params[:status]), class: 'p-2 border border-gray-500 rounded-md text-sm text-gray-700' %>
				  </button>
				</div>
      <% end %>
    </div>

    <!-- Search Box -->
    <div class="flex-grow max-w-xl">
      <%= form_with url: assets_path, method: :get, local: true do %>
        <div class="flex items-center space-x-2">
          <div class="relative w-full">
            <%= text_field_tag :search, params[:search], placeholder: "Search by name, category, or status", class: "w-full pl-10 pr-4 py-2 text-sm text-gray-900 border border-gray-500 rounded-lg bg-gray-50" %>
            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
              <svg class="w-4 h-4 text-gray-500" fill="none" viewBox="0 0 20 20" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z" />
              </svg>
            </div>
          </div>
          <button type="submit" class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-md text-sm">Search</button>
        </div>
      <% end %>
    </div>

    <!-- New Asset -->
    <% if current_user.admin? %>
      <%= link_to new_asset_path, class: 'flex items-center gap-2 px-4 py-2 bg-white text-gray-700 border border-gray-300 rounded-md shadow hover:bg-gray-700 hover:text-white' do %>
        <%= image_tag '/plus.png', alt: 'New Asset Icon', size: '20x20' %>
        <span>New</span>
      <% end %>
    <% end %>
  </div>

  <!-- Asset Table -->
  <% if @assets.any? %>
    <div class="overflow-x-auto bg-white shadow">
      <table class="min-w-full table-auto text-sm text-left text-gray-700">
        <thead class="bg-gray-700 text-white">
          <tr>
            <th class="px-4 py-3">S.N.</th>
            <th class="px-4 py-3">Name</th>
            <th class="px-4 py-3">Category</th>
            <th class="px-4 py-3">Status</th>
            <th class="px-4 py-3">Assigned To</th>
            <th class="px-4 py-3">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @assets.each_with_index do |asset, i| %>
            <tr class="<%= cycle('bg-white', 'bg-gray-50') %> border-b">
              <td class="px-4 py-2"><%= i + 1 %></td>
              <td class="px-4 py-2"><%= asset.name %></td>
              <td class="px-4 py-2"><%= asset.asset_category.name %></td>
              <td class="px-4 py-2">
                <span class="px-2 py-1 rounded-full text-xs font-medium <%= asset.status == 'active' ? 'bg-green-200 text-green-800' : 'bg-red-200 text-red-800' %>">
                  <%= asset.status&.capitalize %>
                </span>
              </td>
              <td class="px-4 py-2"><%= asset.current_assignment&.user&.full_name %></td>
              <td class="px-4 py-2">
                <div class="flex items-center gap-2">
                  <%= link_to asset_path(asset) do %>
                    <%= image_tag '/show1.png', alt: 'Show', size: '16x16' %>
                  <% end %>

                  <% if current_user.admin? %>
                    <%= link_to edit_asset_path(asset) do %>
                      <%= image_tag '/edit1.png', alt: 'Edit', size: '16x16' %>
                    <% end %>

                    <button type="button" class="delete-asset-btn" data-asset-id="<%= asset.id %>" data-asset-message="Are you sure you want to delete this asset?">
                      <%= image_tag '/delete1.png', alt: 'Delete', size: '16x16' %>
                    </button>

                    <%= form_with(model: asset, method: :delete, local: true, id: "delete-form-#{asset.id}", class: 'hidden') do |form| %>
                      <%= form.submit 'Delete', class: 'hidden' %>
                    <% end %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p class="text-gray-600 mt-6 text-center">No assets found.</p>
  <% end %>
</div>

<%= render 'shared/global_delete_modal' %>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const modal = document.getElementById('global-delete-modal');
    const confirmBtn = document.getElementById('confirm-delete-btn');
    const messageEl = document.getElementById('delete-modal-message');
    let currentAssetId = null;

    document.querySelectorAll('.delete-asset-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        currentAssetId = btn.getAttribute('data-asset-id');
        const msg = btn.getAttribute('data-asset-message');
        messageEl.textContent = msg || 'Are you sure?';
        modal.classList.remove('hidden');
      });
    });

    document.querySelectorAll('[data-modal-hide="global-delete-modal"]').forEach(btn => {
      btn.addEventListener('click', () => {
        modal.classList.add('hidden');
      });
    });

    confirmBtn.addEventListener('click', () => {
      if (currentAssetId) {
        const form = document.getElementById(`delete-form-${currentAssetId}`);
        if (form) {
          form.querySelector('input[type="submit"]').click();
        }
      }
    });
  });
</script>
