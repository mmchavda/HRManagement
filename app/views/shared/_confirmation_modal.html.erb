<div data-controller="confirm-modal"
     data-confirm-modal-target="modal"
     class="fixed inset-0 z-50 hidden items-center justify-center bg-black bg-opacity-50">

  <div class="bg-white p-6 rounded shadow-lg text-center w-full max-w-sm">
    <p data-confirm-modal-target="message" class="mb-4 text-lg text-gray-800">Are you sure?</p>
    <div class="flex justify-center gap-4">
      <button type="button"
              class="px-4 py-2 bg-gray-300 text-black rounded hover:bg-gray-400"
              data-action="click->confirm-modal#cancel">
        Cancel
      </button>
      <button type="button"
              class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700"
              data-action="click->confirm-modal#confirm">
        Delete
      </button>
    </div>
  </div>
</div>