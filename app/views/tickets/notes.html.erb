<div class="container mx-auto py-12">
  <div class="flex justify-between items-center"> <!-- Flex container -->
    
    <!-- Image Section -->
    <div class="w-2/3">
      <%= image_tag '/show_bg1.png', alt: 'ticketbg', class: 'w-3/4 h-auto rounded-lg shadow-lg', size: '600x600' %>
    </div>

    <!-- Content Section for Notes -->
    <div class="w-1/3">
      <div class="max-w-4xl mx-auto shadow-xl rounded-xl p-8 bg-white relative box">
        
        <!-- Heading for the Notes Section -->
        <div class="text-center mb-8">
          <h2 class="text-2xl font-semibold text-gray-800">Notes for Ticket</h2>
        </div>

        <!-- Notes Info Section -->
        <div class="space-y-4">
          <ul class="text-gray-700 space-y-4">
            <% @ticket.notes.each do |note| %>
              <li class="border-b border-gray-500 pb-4">
                <strong class="text-black text-lg font-semibold">Note by: <%= note.user.email %></strong>
                <p class="text-gray-600 text-sm mt-2"><%= note.content %></p>
                <small class="text-gray-500 text-xs">Created at: <%= note.created_at.strftime('%B %d, %Y %I:%M %p') %></small>
              </li>
            <% end %>
          </ul>
        </div>

        <!-- Back to Ticket Button -->
        <div class="mt-6">
          <%= link_to 'Back to Ticket', ticket_path(@ticket), class: 'px-4 py-2 bg-gray-200 text-white bg-gray-700 rounded hover:bg-gray-700' %>
        </div>

      </div>
    </div>

  </div> <!-- End of Flex container -->
</div>

