          <svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
          </svg>
          Search
        </button>
      </div>
    </div>
  <% end %>
 
  <div class="ticket_filer">
    <%= form_with(url: tickets_path, method: :get) do %>
      
      <div>
        <table>
        <tr><td><%= label_tag :status, "Status", class: "text-sm font-medium text-black" %></td>
        <td><%= select_tag :status, options_for_select([['All', '']] + Ticket.statuses.keys.map { |status| [status.titleize, status] }, params[:status]), class: 'mt-1 p-2 border border-gray-300 rounded-md text-sm font-medium text-white bg-gray-700' %></td>        
        <td>
            <%= button_tag type: 'submit' do %>
              <%= image_tag '/filter.png', alt: 'Filter', size: '40x20' %>
            <% end %>
          </td>
        </tr>
          </table>
      </div>
    <% end %>
  </div>  
<% if @tickets.present? %>
  <!-- Card Section Starts Here -->
  <div class="flex flex-1 flex-col md:flex-row lg:flex-row mx-2">
    <!-- Card -->
    <div class="rounded overflow-hidden shadow bg-white mx-2 w-full">
      <div class="px-6 py-2 border-b border-gray-200">
        <div class="font-bold text-xl">Tickets</div>
      </div>

      <div class="overflow-x-auto">
        <table class="min-w-full table-auto text-gray-700 text-sm">
          <thead class="bg-gray-700 text-white">
            <tr>
              <th class="px-4 py-2 text-left w-[5%]">S.N.</th>
              <th class="px-4 py-2 text-left w-[15%]">User</th>
              <th class="px-4 py-2 text-left w-[25%]">Title</th>
              <th class="px-4 py-2 text-left w-[10%]">Status</th>
              <th class="px-4 py-2 text-left w-[10%]">Priority</th>
              <th class="px-4 py-2 text-left w-[15%]">Assigned To</th>
              <th class="px-4 py-2 text-left w-[20%]">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @tickets.each_with_index do |ticket, i| %>
              <tr class="<%= cycle('bg-white', 'bg-gray-100') %>">
                <td class="px-4 py-2"><%= i + 1 %></td>
                <td class="px-4 py-2"><%= ticket.user&.full_name %></td>
                <td class="px-4 py-2"><%= ticket.title %></td>
                <td class="px-4 py-2"><%= ticket.status %></td>
                <td class="px-4 py-2"><%= ticket.priority %></td>
                <td class="px-4 py-2"><%= ticket.assigned_user&.full_name %></td>
                <td class="px-4 py-2">
                  <div class="flex items-center space-x-2">
                    <!-- Show -->
                    <%= link_to ticket_path(ticket) do %>
                      <%= image_tag '/show1.png', alt: 'Show ticket', size: '15x15' %>
                    <% end %>

                    <!-- Edit -->
                    <%= link_to edit_ticket_path(ticket) do %>
                      <%= image_tag '/edit1.png', alt: 'Edit ticket', size: '15x15' %>
                    <% end %>

                    <%= render 'shared/delete_button', model: ticket, message: "Are you sure you want to delete this user?" %>

                    <% if (current_user.admin? || current_user.hr? || current_user.manager? || current_user.lead?) && ticket.status != "resolved" && (ticket.assigned_user == current_user) %>
                      <%= link_to resolve_ticket_path(ticket), method: :post do %>
                        <%= image_tag '/resolved.png', alt: 'Resolve ticket', size: '15x15' %>
                      <% end %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>

            <% if @tickets.any? %>
              <tr>
                <!-- Ensure the entire background is white for the row -->
                <td style="background-color: white; padding-top: 15px;" colspan="100%"> <!-- colSpan ensures the pagination spans the full width -->
                  <div class="flex"> <!-- Center the pagination -->
                    <%= paginate @tickets, class: 'flex items-center space-x-6 text-white' %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <!-- /Card -->
  </div>
  <!-- /Card Section Ends Here -->

<% else %>
    <p class="text-gray-700 blank_value">No ticket found.</p>
  <% end %>
</div>

<!-- Reusable Delete Modal -->
<div id="global-delete-modal" tabindex="-1" class="hidden fixed inset-0 z-50 w-full h-full bg-black/40 backdrop-blur-sm flex justify-center items-center transition-opacity duration-300">
  <div class="relative w-full max-w-md max-h-full">
    <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
      
      <!-- Close -->
      <button type="button"
              class="absolute top-3 right-2.5 text-gray-400 hover:text-gray-900"
              data-modal-hide="global-delete-modal">âœ–</button>

      <div class="p-6 text-center" style="margin-bottom: 167px;">
        <h3 id="delete-modal-message" class="mb-5 text-lg text-gray-500 dark:text-gray-300">
          Are you sure you want to delete this?
        </h3>

        <!-- Yes button -->
        <button id="confirm-delete-btn"
                type="button"
                class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded mr-2"
                data-modal-hide="global-delete-modal">
          Yes, delete
        </button>

        <!-- Cancel -->
        <button type="button"
                class="bg-gray-300 hover:bg-gray-400 text-gray-900 px-4 py-2 rounded"
                data-modal-hide="global-delete-modal">
          Cancel
        </button>
      </div>

    </div>
  </div>
</div>


<script>
  document.addEventListener('DOMContentLoaded', () => {
    const modal = document.getElementById('global-delete-modal');
    const confirmBtn = document.getElementById('confirm-delete-btn');
    const messageEl = document.getElementById('delete-modal-message');
    let currentTicketId = null;

    // Open modal on delete button click
    document.querySelectorAll('.delete-ticket-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        currentTicketId = btn.getAttribute('data-ticket-id');
        const msg = btn.getAttribute('data-ticket-message');
        messageEl.textContent = msg || 'Are you sure?';

        modal.classList.remove('hidden');
      });
    });

    // Close modal when cancel or close button clicked
    document.querySelectorAll('[data-modal-hide="global-delete-modal"]').forEach(btn => {
      btn.addEventListener('click', () => {
        modal.classList.add('hidden');
      });
    });

    // Confirm deletion
    confirmBtn.addEventListener('click', () => {
      if (currentTicketId) {
        const form = document.getElementById(`delete-form-${currentTicketId}`);
        if (form) {
          form.querySelector('input[type="submit"]').click();
        }
      }
    });
  });
</script>