<div data-reject-modal-target="modal" class="hidden fixed inset-0 z-50 flex items-center justify-center backdrop-blur-sm bg-white/30">
  <div class="bg-white rounded-xl shadow-lg w-full max-w-md p-6">
    <h2 class="text-xl font-semibold mb-4">Reject Ticket</h2>

    <%= form_with url: "#", method: :patch, data: { turbo: true, reject_modal_target: "form"} do |f| %>
      <%= hidden_field_tag :ticket_id, "", data: { reject_modal_target: "ticketId" } %>

      <div class="mb-4">
        <%= label_tag :rejection_reason, "Reason" %>
        <%= text_area_tag :rejection_reason, "", required: true, class: "w-full border rounded p-2" %>
      </div>

      <div class="flex justify-end space-x-2">
        <button type="button" data-action="reject-modal#close" class="px-4 py-2 bg-gray-300 rounded">Cancel</button>
        <%= f.submit "Reject", class: "px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700" %>
      </div>
    <% end %>
  </div>
</div>

 <button 
    type="button"
    data-action="reject-modal#open"
    data-ticket-id="<%= ticket.id %>"
    class="text-red-600 hover:text-red-800"
    title="Reject Ticket"
  >
    <i class="fas fa-times-circle fa-lg"></i>
</button>
