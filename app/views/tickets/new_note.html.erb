<!-- app/views/tickets/new_note.html.erb -->
<div class="mt-6">
  <%= form_with(model: [ @ticket, @note ], url: create_note_ticket_path(@ticket), method: :post, local: true) do |form| %>

    <div class="form-group">
      <%= form.label :content, 'Add Note' %>
      <%= form.text_area :content, class: "form-control w-full p-3 rounded-md border border-gray-300 shadow-sm cursor-text", rows: 4 %>
    </div>
    
    <div class="form-group">
      <%= form.submit 'Create Note', class: "w-full py-2 px-4 border border-transparent rounded-md shadow-lg text-sm font-medium text-gray-300 bg-black hover:bg-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-600 transition duration-300 ease-in-out transform hover:scale-105" %>
    </div>
  <% end %>
</div>