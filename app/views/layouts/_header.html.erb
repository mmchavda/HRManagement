<header class="bg-gray-800 text-white">
  <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
    <div class="relative flex items-center justify-between h-16">
      <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
        <!-- Mobile menu button-->
      </div>
      <div class="flex-1 flex items-center justify-center sm:items-stretch sm:justify-start">
        <a href="/" class="text-2xl font-bold text-white">HR Management</a>
        <div class="hidden sm:block sm:ml-6">
          <div class="flex space-x-4">
            <%= link_to 'Home', root_path, class: 'text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium' %>
            <%= link_to 'Tickets', tickets_path, class: 'text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium' %>
						<%= link_to 'Expenses', expenses_path, class: 'text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium' %>
            <%= link_to 'ReimbursementRequests', reimbursement_requests_path, class: 'text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium' %>
						<% if user_signed_in? %>
              <!-- Logout Link for Signed-in User -->
            
              <%= form_with url: destroy_user_session_path, method: :delete, class: 'inline-block' do |form| %>
               <%= form.submit 'Logout', class: 'text-white hover:text-gray-300 px-4 bg-transparent border-0 cursor-pointer' %>
              <% end %>
              <% else %>
              <!-- Login Link for Not Signed-in User -->
              <a href="<%= new_user_session_path %>" class="text-white hover:text-gray-300 px-4">Login</a>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>