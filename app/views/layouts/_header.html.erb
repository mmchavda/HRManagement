<header class="text-white" style="background-color: #61619f; position: fixed; top: 0; width: 100%; z-index: 1000;">
  <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
    <div class="relative flex items-center justify-between h-16">
      <div class="flex-1 flex items-center justify-center sm:items-stretch sm:justify-start">

        <div class="hidden sm:block sm:ml-6">
          <div class="flex space-x-4">
            <%= image_tag '/HRManagement_logo.png', alt: 'HR Management Logo', size: "50x50" %>
            <%= nav_link('Dashboard', root_path) %>
            <%= nav_link('Tickets', tickets_path) %>
            <%= nav_link('Expenses', expenses_path) %>
            <%= nav_link('ReimbursementRequests', reimbursement_requests_path) %>
          </div>
        </div>
        
        <% if user_signed_in? %>
          <!-- Profile Icon and Dropdown -->
          <div class="relative group ml-4">
            <button class="flex items-center space-x-2 text-white hover:text-gray-300 focus:outline-none" id="dropdown-btn">
              <%= image_tag('profile-user.png', alt: 'User', class: 'w-10 h-10 rounded-full') rescue content_tag(:div, "ðŸ‘¤", class: "w-10 h-10 rounded-full bg-gray-300 flex items-center justify-center text-white") %>

              <span><%= current_user.email %></span>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>

            <!-- Dropdown Menu -->
            <div class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg ring-1 ring-black ring-opacity-5 hidden group-hover:block" id="dropdown-menu">
              <div class="py-1">
                <%= link_to 'Dashboard', root_path, class: "block px-4 py-2 text-gray-700 hover:bg-gray-100" %>
                <%= link_to 'Profile', dashboard_path(current_user), class: "block px-4 py-2 text-gray-700 hover:bg-gray-100" %>
                <%= link_to 'Change Password', edit_user_registration_path, class: "block px-4 py-2 text-gray-700 hover:bg-gray-100" %>

                <%= form_with url: destroy_user_session_path, method: :delete, class: 'block' do |form| %>
                  <%= form.submit 'Logout', class: "block w-full text-left px-4 py-2 text-gray-700 hover:bg-gray-100" %>
                <% end %>
              </div>
            </div>
          </div>
        <% else %>
          <a href="<%= new_user_session_path %>" class="text-white hover:text-gray-300 px-4">Login</a>
        <% end %>
      </div>
    </div>
  </div>
</header>
