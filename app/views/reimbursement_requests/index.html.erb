<h1 class="text-xl font-semibold mb-4 text-gray-700"> Reimbursement Requests </h1>

<table class="min-w-full table-auto border-collapse">
  <thead>
    <tr class="bg-gray-100">
      <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Title</th>
      <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Amount</th>
      <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Status</th>
      <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Actions <%= link_to 'New Reimbursement Request', new_reimbursement_request_path, class: 'text-blue-500 hover:text-blue-700' %></th>
    </tr>
  </thead>
  <tbody>
    <% @reimbursement_requests.each do |request| %>
      <tr class="<%= cycle('bg-white', 'bg-gray-50') %>">
        <td class="px-4 py-2 text-sm text-gray-900"><%= request.expense.title %></td>
        <td class="px-4 py-2 text-sm text-gray-900"><%= request.total_amount %></td>
        <td class="px-4 py-2 text-sm text-gray-900"><%= request.status %></td>
        <td class="px-4 py-2 text-sm">
          <%= link_to 'Show', reimbursement_request_path(request), class: 'text-blue-500 hover:text-blue-700' %> |
          <%= link_to 'Edit', edit_reimbursement_request_path(request), class: 'text-yellow-500 hover:text-yellow-700' %> |
          <%= link_to 'Delete', reimbursement_request_path(request), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-500 hover:text-red-700' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
