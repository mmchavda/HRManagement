<div class="container mx-auto py-12">
  <div class="flex justify-between items-center"> <!-- Flex container -->
    
    <!-- Image Section -->
    <div class="w-2/3">
      <%= image_tag '/show_bg.png', alt: 'showbg', class: 'w-3/4 h-auto rounded-lg shadow-lg', size: '600x600' %>
    </div>

    <!-- Content Section -->
    <div class="show w-1/3"> <!-- Adjust the width as needed -->
      <div class="max-w-4xl mx-auto shadow-xl rounded-xl p-8 bg-white relative">
        
        <!-- Heading for the Right Section -->
        <div class="text-center mb-6">
          <h2 class="text-2xl font-semibold text-gray-800">Reimbursement Request Details</h2>
        </div>

        <hr class="border-t border-gray-300 my-2">


        <!-- Reimbursement Request Info Section -->
        <div class="space-y-8">
          
          <!-- First Pair of Labels (Title and Amount) -->
          <div class="flex justify-between custom_ui">
            <div class="w-1/2 pr-4">
              <strong class="text-black text-lg font-semibold">Title</strong>
              <p class="text-gray-800 text-lg text-left"><%= @reimbursement_request.expense.title %></p>
            </div>
            <div class="w-1/2 pl-4">
              <strong class="text-black text-lg font-semibold">Amount</strong>
              <p class="text-gray-800 text-lg text-left"><%= number_to_currency(@reimbursement_request.total_amount) %></p>
            </div>
          </div>

          <!-- Second Pair of Labels (Reason and Status) -->
          <div class="flex justify-between custom_ui">
            <div class="w-1/2 pr-4">
              <strong class="text-black text-lg font-semibold">Reason</strong>
              <p class="text-gray-800 text-lg text-left"><%= @reimbursement_request.expense.description %></p>
            </div>
            <div class="w-1/2 pl-4">
              <strong class="text-black text-lg font-semibold">Status</strong>
              <p class="text-gray-800 text-lg text-left"><%= @reimbursement_request.status&.humanize %></p>
            </div>
          </div>

          <!-- Other Reimbursement Info -->
          <div class="flex justify-between custom_ui">
            <div class="w-1/2 pr-4">
              <strong class="text-black text-lg font-semibold">Date Submitted</strong>
              <p class="text-gray-800 text-lg text-left"><%= @reimbursement_request.created_at.strftime('%B %d, %Y') %></p>
            </div>
            
            <div class="w-1/2 pl-4">
              <strong class="text-black text-lg font-semibold">Approved Date</strong>
              <p class="text-gray-800 text-lg text-left">
                <%#= @reimbursement_request&.approved_at.present? ? @reimbursement_request.approved_at.strftime('%B %d, %Y') : 'N/A' %>
              </p>
            </div>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="mt-6 flex justify-start">
          <%= link_to 'Back to Requests', reimbursement_requests_path, class: 'px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300 transition duration-200 ease-in-out' %>
          <%= link_to 'View Audit History', audit_history_reimbursement_request_path(@reimbursement_request), class: 'ml-4 px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300 transition duration-200 ease-in-out' %>
        </div>

      </div>
    </div>  
  </div> <!-- End of Flex container -->
</div>

