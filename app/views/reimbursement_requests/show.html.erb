<div class="container mx-auto py-12">
  <div class="max-w-4xl mx-auto shadow-xl rounded-xl p-8 bg-gray-800 relative">

    <!-- Reimbursement Request Info Section -->
    <div class="space-y-8">
      <div class="flex justify-between items-center">
        <strong class="text-white text-lg font-semibold">Title:</strong>
        <p class="text-gray-300 text-lg"><%= @reimbursement_request.expense.title %></p> 
      </div>

      <hr class="border-gray-500">

      <div class="flex justify-between items-center">
        <strong class="text-white text-lg font-semibold">Amount:</strong>
        <p class="text-gray-300 text-lg"><%= number_to_currency(@reimbursement_request.total_amount) %></p>
      </div>

      <hr class="border-gray-500">

      <div class="flex justify-between items-center">
        <strong class="text-white text-lg font-semibold">Reason:</strong>
        <p class="text-gray-300 text-lg"><%= @reimbursement_request.expense.description %></p>
      </div>

      <hr class="border-gray-500">

      <div class="flex justify-between items-center">
        <strong class="text-white text-lg font-semibold">Status:</strong>
        <p class="text-gray-300 text-lg"><%= @reimbursement_request.status&.humanize %></p>
      </div>

      <hr class="border-gray-500">

      <div class="flex justify-between items-center">
        <strong class="text-white text-lg font-semibold">Date Submitted:</strong>
        <p class="text-gray-300 text-lg"><%= @reimbursement_request.created_at.strftime('%B %d, %Y') %></p>
      </div>

      <hr class="border-gray-500">

      <div class="flex justify-between items-center">
        <strong class="text-white text-lg font-semibold">Approved Date:</strong>
        <p class="text-gray-300 text-lg"><%#= @reimbursement_request.approved_at.present? ? @reimbursement_request.approved_at.strftime('%B %d, %Y') : 'N/A' %></p>
      </div>

    </div>

    <!-- Action Buttons -->
    <div class="mt-6 flex justify-start">
      <%= link_to 'Back to Requests', reimbursement_requests_path, class: 'px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300 transition duration-200 ease-in-out' %>
      <%#= link_to 'Edit', edit_reimbursement_request_path(@reimbursement_request), class: 'ml-4 px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600 transition duration-200 ease-in-out' %>
      <%#= button_to 'Delete', reimbursement_request_path(@reimbursement_request), method: :delete, data: { confirm: 'Are you sure you want to delete this reimbursement request?' }, class: 'ml-4 px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600 transition duration-200 ease-in-out' %>
      <!-- Link to Audit History Page -->
      <%= link_to 'View Audit History', audit_history_reimbursement_request_path(@reimbursement_request), class: 'ml-4 px-4 py-2 px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300 transition duration-200 ease-in-out' %>
    </div>

  </div>
</div>

