<div class="container mx-auto px-6 py-4">
  <div class="flex flex-wrap justify-between items-center px-8 py-2 shadow-md bg-white rounded-md mb-6">
    <h2 class="text-2xl font-semibold text-gray-700">Reimbursement Request</h2>
    <%= link_to 'Back to Requests', reimbursement_requests_path, data: { turbo: false },
        class: 'bg-gray-700 hover:bg-gray-800 text-white px-4 py-2 rounded-md text-sm font-medium shadow-sm transition' %>
  </div>

  <div class="bg-white shadow-xl rounded-2xl p-10 border border-gray-200 space-y-12">
    <section>
      <h3 class="text-xl font-semibold text-gray-700 border-b pb-2 mb-6">Request Details</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        
        <div>
          <label class="block text-sm font-medium text-gray-500 uppercase tracking-wide">Title</label>
          <p class="mt-1 text-gray-800"><%= @reimbursement_request.expense.title %></p>
        </div>
       
        <div>
          <label class="block text-sm font-medium text-gray-500 uppercase tracking-wide">Amount</label>
          <p class="mt-1 text-gray-800"><%= number_to_currency(@reimbursement_request.total_amount) %></p>
        </div>
     
        <div>
          <label class="block text-sm font-medium text-gray-500 uppercase tracking-wide">Reason</label>
          <p class="mt-1 text-gray-800"><%= @reimbursement_request.rejection_reason %></p>
        </div>
       
        <div>
          <label class="block text-sm font-medium text-gray-500 uppercase tracking-wide">Status</label>
          <p class="mt-1 text-gray-800"><%= @reimbursement_request.status&.humanize %></p>
        </div>
       
        <div>
          <label class="block text-sm font-medium text-gray-500 uppercase tracking-wide">Date Submitted</label>
          <p class="mt-1 text-gray-800"><%= @reimbursement_request.created_at.strftime('%B %d, %Y') %></p>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-500 uppercase tracking-wide">Approved Date</label>
          <p class="mt-1 text-gray-800">
            <%= @reimbursement_request.approved_at.present? ? @reimbursement_request.approved_at.strftime('%B %d, %Y') : 'N/A' %>
          </p>
        </div>
      </div>
    </section>

    <h3 class="text-xl font-semibold text-gray-700 border-b pb-2 mb-6"></h3>

    <section data-controller="audit-toggle" class="space-y-4">
      <button data-action="click->audit-toggle#toggle" class="flex items-center gap-2 text-gray-600 hover:text-gray-800 transition">
        <span class="text-sm font-medium">View Audit History</span>
      </button>

      <div data-audit-toggle-target="section" class="hidden">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 items-start mt-6">
          <div>
            <h4 class="text-lg font-semibold text-gray-700 mb-4 border-b pb-2">
              Audit History for <%= @reimbursement_request.expense.title %>
            </h4>
            <div class="space-y-6 max-h-[65vh] overflow-y-auto pr-2">
              <% @reimbursement_request.audits.each do |audit| %>
                <div class="border-b border-gray-300 pb-4">
                  <p class="text-sm text-gray-600 mb-1">
                    <strong><%= audit.action.capitalize %></strong> by <%= audit.user&.email || "System" %> on
                    <%= audit.created_at.strftime('%B %d, %Y at %I:%M %p') %>
                  </p>
                  <ul class="ml-4 list-disc text-gray-700 text-sm">
                    <% audit.audited_changes.each do |field, change| %>
                      <% if change.is_a?(Array) && change.length == 2 %>
                        <li>
                          <strong><%= field.capitalize %>:</strong>
                          <%= field == "status" ? "#{ReimbursementRequest.statuses.key(change[0])} → #{ReimbursementRequest.statuses.key(change[1])}" : "#{change[0]} → #{change[1]}" %>
                        </li>
                      <% end %>
                    <% end %>
                  </ul>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </section>

  </div>
</div>