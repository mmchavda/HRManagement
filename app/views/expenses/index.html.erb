<h1 class="text-2xl font-semibold mb-4">Expenses</h1>

<%= link_to 'New Expense', new_expense_path, class: 'inline-block mb-4 px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600' %>

<table class="min-w-full table-auto border-collapse">
  <thead>
    <tr class="bg-gray-100">
      <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Title</th>
      <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Amount</th>
      <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Category</th>
      <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Date</th>
      <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @expenses.each do |expense| %>
      <tr class="<%= cycle('bg-white', 'bg-gray-50') %>">
        <td class="px-4 py-2 text-sm text-gray-900"><%= expense.title %></td>
        <td class="px-4 py-2 text-sm text-gray-900"><%= number_to_currency(expense.amount) %></td>
        <td class="px-4 py-2 text-sm text-gray-900"><%= expense.category %></td>
        <td class="px-4 py-2 text-sm text-gray-900"><%= expense.date.strftime('%B %d, %Y') %></td>
        <td class="px-4 py-2 text-sm">
          <%= link_to 'Show', expense_path(expense), class: 'text-blue-500 hover:text-blue-700' %> |
          <%= link_to 'Edit', edit_expense_path(expense), class: 'text-yellow-500 hover:text-yellow-700' %> |
          <%= link_to 'Delete', expense_path(expense), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-500 hover:text-red-700' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back to Dashboard', root_path, class: 'text-blue-500 hover:text-blue-700 mt-4 block' %>
