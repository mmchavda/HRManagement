<!-- Confirmation Modal -->
<div id="confirmationModal" class="hidden fixed inset-0 bg-gray-900 bg-opacity-75 flex items-center justify-center z-50">
  <div class="bg-white p-4 rounded-md shadow-lg">
    <h2 class="text-lg font-semibold"> Delete this expense?</h2>
    <div class="mt-4 flex justify-between">
      <button id="cancelDelete" class="bg-gray-300 px-4 py-2 rounded-md">Cancel</button>
      <button id="confirmDelete" class="bg-red-500 text-white px-4 py-2 rounded-md">Confirm</button>
    </div>
  </div>
</div>

<div class="container mx-auto">
  <h1 class="text-2xl font-semibold text-gray-600 mb-6">Expense List</h1>
  <div class="flex flex-wrap justify-between items-center gap-4 mb-6">
    <!-- Filter Form -->
    <div>
      <%= form_with url: expenses_path, method: :get, local: true do %>
        <div class="flex items-center space-x-2", style="margin-left: 20px;">
        <button type="submit" class="flex items-center">
          <%= select_tag :category, options_for_select([['All Categories', '']] + Expense.categories.keys.map { |category| [category.titleize, category] }, params[:category]), class: 'p-2 border border-gray-500 rounded-md text-sm text-gray-700 bg-white' %>
          
        </button>
        </div>
      <% end %>
    </div>
  
    <!-- Search Form -->
    <div class="flex-grow max-w-xl">
      <%= form_with url: expenses_path, method: :get, local: true do %>
        <div class="flex items-center space-x-2">
          <div class="relative w-full">
            <%= text_field_tag :search, params[:search], placeholder: "Search by user name or title", class: "w-full pl-10 pr-4 py-2 text-sm text-gray-900 border border-gray-500 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500" %>
            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
              <svg class="w-4 h-4 text-gray-500" fill="none" viewBox="0 0 20 20" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
              </svg>
            </div>
          </div>
  
          <button type="submit" class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-md text-sm font-medium shadow-sm">
            Search
          </button>
        </div>
      <% end %>
    </div>
  
    <!-- New Expense Button -->
    <div class="border border-gray-500 rounded-md hover:bg-gray-500 hover:text-white", style="margin-right: 20px;">
      <%= link_to new_expense_path, class: 'text-gray-700 font-medium px-4 py-2 rounded-md shadow-md flex items-center gap-2' do %>
        <%= image_tag '/plus.png', alt: 'New expense Icon', size: '20x20', title: 'Create a new expense' %>
        <span>New</span>
      <% end %>
    </div>
  </div>
  
  <!-- Table with increased width -->
  <% if @expenses.present? %>
    <!-- Card Section Starts Here -->
    <div class="flex flex-1 flex-col md:flex-row lg:flex-row mx-2">
      <!-- card -->
      <div class="rounded overflow-hidden shadow bg-white mx-2 w-full">
        <div class="table-responsive">
          <table class="min-w-full table-auto text-gray-700 text-sm">
            <thead class="bg-gray-700 text-white">
              <tr>
                <th class="px-4 py-2 text-left text-white bg-gray-700" style="width: 5%;">S.N.</th>
                <th class="px-4 py-2 text-left text-white bg-gray-700" style="width: 15%;">User</th>
                <th class="px-4 py-2 text-left text-white bg-gray-700" style="width: 15%;">Title</th>
                <th class="px-4 py-2 text-left text-white bg-gray-700" style="width: 15%;">Amount</th>
                <th class="px-4 py-2 text-left text-white bg-gray-700" style="width: 15%;">Category</th>
                <th class="px-4 py-2 text-left text-white bg-gray-700" style="width: 15%;">Date</th>
                <th class="px-4 py-2 text-left text-white bg-gray-700" style="width: 10%;">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @expenses.each_with_index do |expense, i| %>
                <tr class="<%= cycle('bg-white', 'bg-gray-100') %>">
                  <td class="px-4 py-2"><%= i + 1 %></td>
                  <td class="px-4 py-2"><%= expense.user&.full_name %></td>
                  <td class="px-4 py-2"><%= expense.title %></td>
                  <td class="px-4 py-2"><%= number_to_currency(expense.amount) %></td>
                  <td class="px-4 py-2"><%= expense.category %></td>
                  <td class="px-4 py-2"><%= expense.date&.strftime('%B %d, %Y') %></td>
                  <td class="px-4 py-2">
                    <div class="flex">
                      <%= link_to expense_path(expense), data: { turbo: false }, class: "inline-flex items-center justify-center border border-green-300 bg-white text-green-700 rounded-md p-2 hover:bg-green-300 hover:border-green-500 transition duration-200 mx-1" do %>
                        <i class="fas fa-eye"></i>
                      <% end %>

                      <%= link_to edit_expense_path(expense), data: { turbo: false }, class: "inline-flex items-center justify-center border border-blue-300 bg-white text-blue-700 rounded-md p-2 hover:bg-blue-300 hover:border-blue-500 transition duration-200 mx-1" do %>
                        <i class="fas fa-edit"></i>
                      <% end %>

                      <button type="button"
                              class="inline-flex items-center justify-center border border-red-300 bg-white text-red-700 rounded-md p-2 hover:bg-red-300 hover:border-red-500 transition duration-200 mx-1 delete-expense-btn"
                              data-expense-id="<%= expense.id %>"
                              data-expense-message="Are you sure you want to delete this expense?">
                        <%= image_tag '/delete1.png', alt: 'Delete expense', size: '15x15' %>
                      </button>

                      <%= form_with(model: expense, method: :delete, local: true, id: "delete-form-#{expense.id}", class: "hidden") do |form| %>
                        <%= form.submit 'Delete', class: 'hidden' %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
              <% if @expenses.any? %>
                <tr>
                  <td colspan="100%"> 
                    <div class="flex bg-white px-4 py-2">
                      <%= paginate @expenses, class: 'flex items-center space-x-6 text-white' %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% else %>
    <p class="text-gray-700 blank_value">No expense found.</p>
  <% end %>  
</div>

<%= render 'shared/global_delete_modal' %>

<script>
  document.addEventListener('turbo:load', () => {
    const modal = document.getElementById('global-delete-modal');
    const confirmBtn = document.getElementById('confirm-delete-btn');
    const messageEl = document.getElementById('delete-modal-message');
    let currentExpenseId = null;

    // Open modal on delete button click
    document.querySelectorAll('.delete-expense-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        currentExpenseId = btn.getAttribute('data-expense-id');
        const msg = btn.getAttribute('data-expense-message');
        messageEl.textContent = msg || 'Are you sure?';

        modal.classList.remove('hidden');
      });
    });

    // Close modal when cancel or close button clicked
    document.querySelectorAll('[data-modal-hide="global-delete-modal"]').forEach(btn => {
      btn.addEventListener('click', () => {
        modal.classList.add('hidden');
      });
    });

    // Confirm deletion
    confirmBtn.addEventListener('click', () => {
      if (currentExpenseId) {
        const form = document.getElementById(`delete-form-${currentExpenseId}`);
        if (form) {
          form.querySelector('input[type="submit"]').click();
        }
      }
    });
  });
</script>
