<div class="container">
  <div class="text-center mb-8">
    <h2 class="text-3xl font-semibold text-gray-800">Edit Expense</h2>
  </div>

  <div class="bg-white p-4 rounded-lg form-container my_form">
    <%= form_with(model: @expense, local: true) do |form| %>
      <% if @expense.errors.any? %>
        <div class="alert alert-danger bg-red-100 text-red-700 p-4 rounded mb-4">
            <%= @expense.errors.full_messages.join(", ") %>
        </div>
      <% end %>

      <div class="mb-4">
        <%= form.label :title, 'Title', class: 'inline-flex items-center text-sm font-medium' %>
        <span class="text-red-600 ml-1">*</span> <!-- Red asterisk for required field -->
        <%= form.text_field :title, required: true, class: 'mt-1 block w-full px-3 py-2 border border-gray-700 rounded-md shadow-sm text-sm font-medium text-gray-700 focus:outline-none focus:ring-black focus:border-black sm:text-sm' %>
      </div>

      <div class="mb-4">
        <%= form.label :amount, 'Amount', class: 'inline-flex items-center text-sm font-medium' %>
        <span class="text-red-600 ml-1">*</span> <!-- Red asterisk for required field -->
        <%= form.number_field :amount, required: true, step: 0.01, class: 'mt-1 block w-full px-3 py-2 border border-gray-700 rounded-md shadow-sm text-sm font-medium text-gray-700 focus:outline-none focus:ring-black focus:border-black sm:text-sm' %>
      </div>

      <div class="mb-4">
        <%= form.label :category, 'Category', class: 'inline-flex items-center text-sm font-medium' %>
        <span class="text-red-600 ml-1">*</span> <!-- Red asterisk for required field -->
        <%= form.select :category, Expense.categories.keys.map { |category| [category.humanize, category] }, { prompt: "Select Category" }, required: true, class: 'mt-1 block w-full px-3 py-2 border border-gray-700 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-gray-200 focus:outline-none focus:ring-black focus:border-black sm:text-sm' %>
      </div>

      <div class="mb-4">
        <%= form.label :description, 'Description', class: 'block text-sm font-medium text-black' %>
        <%= form.text_area :description, rows: 4, class: 'mt-1 block w-full px-3 py-2 border border-gray-700 rounded-md shadow-sm text-sm font-medium text-gray-700 focus:outline-none focus:ring-black focus:border-black sm:text-sm' %>
      </div>

      <div class="mb-4">
        <%= form.label :date, 'Date', class: 'inline-flex items-center text-sm font-medium' %>
        <span class="text-red-600 ml-1">*</span> <!-- Red asterisk for required field -->
        <%= form.date_field :date, required: true, class: 'mt-1 block w-full px-3 py-2 border border-gray-700 rounded-md shadow-sm text-sm font-medium text-gray-700 focus:outline-none focus:ring-black focus:border-black sm:text-sm' %>
      </div>

      <div class="mb-4">
        <%= form.label :proof, 'Proof', class: 'inline-flex items-center text-sm font-medium' %>
        <span class="text-red-600 ml-1">*</span> <!-- Red asterisk for required field -->
        <%= form.file_field :proof, required: true, class: 'mt-1 block w-full text-sm border border-gray-700 rounded-md text-gray-700' %>
      </div>

      <div class="mb-4">
        <%= form.submit "Update Expense", class: "w-full py-2 px-4 border border-transparent rounded-md shadow-lg text-sm font-medium text-white bg-black hover:bg-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-600 transition duration-300 ease-in-out transform hover:scale-105" %>
      </div>
    <% end %>
  </div>
</div>  

<style>
  .ml-1 {
    color: red; 
  }

  .my_form {
    width: 500px;
    margin: 0 auto;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 2); 
  }

  .container {
    padding: 4rem 0;
    width: 80%;
    margin: 0 auto;
    display: block;
    background: white;
  }

  .alert {
    margin-bottom: 1rem;
  }
  
  .alert-danger {
    background-color: #f8d7da;
    color: #721c24;
  }

  .focus\:ring-black:focus {
    box-shadow: 0 0 0 2px rgba(0, 0, 0, 0.5);
  }

  .focus\:border-black:focus {
    border-color: #000;
  }

  .bg-gray-200 {
    background-color: #f7fafc;
  }

  .text-gray-700 {
    color: #4a5568;
  }

  .bg-black {
    background-color: #000;
  }

  .bg-white {
    background-color: #fff;
  }

  .shadow-sm {
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
  }

  .rounded-md {
    border-radius: 0.375rem;
  }

  .transition {
    transition: transform 0.2s ease-in-out;
  }

  .hover\:scale-105:hover {
    transform: scale(1.05);
  }

  .focus\:outline-none:focus {
    outline: none;
  }
</style>
