<div class="container mx-auto px-6">
  <div class="bg-white shadow-xl rounded overflow-hidden">
    
    <!-- Header -->
    <div class="flex items-center justify-between bg-gray-200 px-6 py-4 border-b">
      <h2 class="text-xl font-semibold text-gray-600">Expense Information</h2>
      <%= link_to expenses_path, data: { turbo: false },
          class: "inline-flex items-center gap-2 bg-gray-100 hover:bg-gray-200 text-gray-700 px-4 py-2 rounded-lg text-sm font-medium border border-gray-300 shadow-sm transition duration-150" do %>
        <i class="fas fa-arrow-left" aria-hidden="true"></i>
        <span>Back to Expenses</span>
      <% end %>
    </div>

    <div class="p-6 space-y-10">

      <!-- Basic Info -->
      <div>
        <h2 class="text-xl font-semibold text-gray-600 mb-4 border-b pb-2">Basic Information</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div>
            <label class="text-gray-500 text-sm uppercase tracking-wide">Title</label>
            <p class="text-gray-700 text-base mt-1"><%= @expense.title %></p>
          </div>
          <div>
            <label class="text-gray-500 text-sm uppercase tracking-wide">Amount</label>
            <p class="text-gray-700 text-base mt-1"><%= number_to_currency(@expense.amount) %></p>
          </div>
          <div>
            <label class="text-gray-500 text-sm uppercase tracking-wide">Category</label>
            <p class="text-gray-700 text-base mt-1"><%= @expense.category&.humanize %></p>
          </div>
          <div>
            <label class="text-gray-500 text-sm uppercase tracking-wide">Date</label>
            <p class="text-gray-700 text-base mt-1"><%= @expense.date&.strftime('%B %d, %Y') %></p>
          </div>
        </div>
      </div>

      <!-- Submission Info -->
      <div>
        <h2 class="text-xl font-semibold text-gray-600 mb-4 border-b pb-2">Submission Information</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div>
            <label class="text-gray-500 text-sm uppercase tracking-wide">Submitted By</label>
            <p class="text-gray-700 text-base mt-1"><%= @expense.user.email %></p>
          </div>
          <div>
            <label class="text-gray-500 text-sm uppercase tracking-wide">Created At</label>
            <p class="text-gray-700 text-base mt-1"><%= @expense.created_at.strftime('%B %d, %Y %I:%M %p') %></p>
          </div>
          <% if @expense.created_at != @expense.updated_at %>
            <div>
              <label class="text-gray-500 text-sm uppercase tracking-wide">Updated At</label>
              <p class="text-gray-700 text-base mt-1"><%= @expense.updated_at.strftime('%B %d, %Y %I:%M %p') %></p>
            </div>
          <% end %>  
        </div>
      </div>

      <!-- Attachment -->
      <% if @expense.proof.attached? %>
        <div>
          <h2 class="text-xl font-semibold text-gray-600 mb-4 border-b pb-2">Attachment</h2>
          <div>
            <label class="text-gray-500 text-sm uppercase tracking-wide">Proof</label>
            <p class="text-blue-600 mt-1">
              <%= link_to @expense.proof.filename.to_s, url_for(@expense.proof), target: "_blank", class: "underline" %>
            </p>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
