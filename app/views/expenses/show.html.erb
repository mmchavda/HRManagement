<div class="container mx-auto py-12 bg-cover bg-center" style="background-image: url('https://www.example.com/your-image.jpg');">

  <div class="max-w-4xl mx-auto shadow-2xl rounded-xl p-8 bg-white bg-opacity-80 relative flex">

    <!-- Left Side - Image Section -->
    <div class="w-2/3 flex justify-center items-center p-4">
      <% if @expense.proof.attached? %>
        <%= image_tag @expense.proof, alt: "Expense Proof", class: "w-60 h-60 rounded-lg object-cover border-4 border-indigo-600 shadow-lg" %>
      <% else %>
        <div class="w-60 h-60 rounded-lg bg-gray-300 flex items-center justify-center text-xl text-gray-600 font-semibold shadow-lg">
          <span>No Image</span>
        </div>
      <% end %>
    </div>

    <!-- Right Side - Expense Info Section -->
    <div class="w-1/3 pl-8 space-y-6">

      <!-- Title Section -->
      <div class="flex justify-between items-center">
        <div class="w-1/3">
          <strong class="text-gray-800 text-lg font-semibold">Title:</strong>
        </div>
        <div class="w-2/3 text-right">
          <p class="text-gray-700 text-lg"><%= @expense.title %></p>
        </div>
      </div>

      <!-- Amount Section -->
      <div class="flex justify-between items-center">
        <div class="w-1/3">
          <strong class="text-gray-800 text-lg font-semibold">Amount:</strong>
        </div>
        <div class="w-2/3 text-right">
          <p class="text-gray-700 text-lg"><%= number_to_currency(@expense.amount) %></p>
        </div>
      </div>

      <!-- Category Section -->
      <div class="flex justify-between items-center">
        <div class="w-1/3">
          <strong class="text-gray-800 text-lg font-semibold">Category:</strong>
        </div>
        <div class="w-2/3 text-right">
          <p class="text-gray-700 text-lg"><%= @expense.category&.humanize %></p>
        </div>
      </div>

      <!-- Date Section -->
      <div class="flex justify-between items-center">
        <div class="w-1/3">
          <strong class="text-gray-800 text-lg font-semibold">Date:</strong>
        </div>
        <div class="w-2/3 text-right">
          <p class="text-gray-700 text-lg"><%= @expense.date&.strftime('%B %d, %Y') %></p>
        </div>
      </div>

      <!-- Submitted By Section -->
      <div class="flex justify-between items-center">
        <div class="w-1/3">
          <strong class="text-gray-800 text-lg font-semibold">Submitted By:</strong>
        </div>
        <div class="w-2/3 text-right">
          <p class="text-gray-700 text-lg"><%= @expense.user.email %></p>
        </div>
      </div>

      <!-- Created At Section -->
      <div class="flex justify-between items-center">
        <div class="w-1/3">
          <strong class="text-gray-800 text-lg font-semibold">Created At:</strong>
        </div>
        <div class="w-2/3 text-right">
          <p class="text-gray-700 text-lg"><%= @expense.created_at.strftime('%B %d, %Y %I:%M %p') %></p>
        </div>
      </div>

      <!-- Updated At Section -->
      <div class="flex justify-between items-center">
        <div class="w-1/3">
          <strong class="text-gray-800 text-lg font-semibold">Updated At:</strong>
        </div>
        <div class="w-2/3 text-right">
          <p class="text-gray-700 text-lg"><%= @expense.updated_at.strftime('%B %d, %Y %I:%M %p') %></p>
        </div>
      </div>

    </div>

  </div>

  <!-- Back to Expenses Button Section (Centered) -->
  <div class="mt-6 flex justify-center space-x-4">
    <%= link_to 'Back to Expenses', expenses_path, class: 'px-4 py-2 bg-gray-300 text-gray-700 rounded hover:bg-gray-400' %>
    <%= link_to 'Edit', edit_expense_path(@expense), class: 'ml-4 px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600' %>
    <%= button_to 'Delete', expense_path(@expense), method: :delete, data: { confirm: 'Are you sure you want to delete this expense?' }, class: 'ml-4 px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600' %>
  </div>

</div>

