<div class="container mx-auto py-12">
  <div class="max-w-4xl mx-auto shadow-xl rounded-xl p-8 bg-gray-800 relative">

    <!-- Expense Info Section -->
    <div class="space-y-8">
      <div class="flex justify-between items-center">
        <strong class="text-white text-lg font-semibold">Title:</strong>
        <p class="text-gray-300 text-lg"><%= @expense.title %></p>
      </div>

      <hr class="border-gray-500">

      <div class="flex justify-between items-center">
        <strong class="text-white text-lg font-semibold">Amount:</strong>
        <p class="text-gray-300 text-lg"><%= number_to_currency(@expense.amount) %></p>
      </div>

      <hr class="border-gray-500">

      <div class="flex justify-between items-center">
        <strong class="text-white text-lg font-semibold">Category:</strong>
        <p class="text-gray-300 text-lg"><%= @expense.category&.humanize %></p>
      </div>

      <hr class="border-gray-500">

      <div class="flex justify-between items-center">
        <strong class="text-white text-lg font-semibold">Date:</strong>
        <p class="text-gray-300 text-lg"><%= @expense.date&.strftime('%B %d, %Y') %></p>
      </div>

      <hr class="border-gray-500">

      <div class="flex justify-start mb-8">
        <% if @expense.proof.attached? %>
          <%= image_tag @expense.proof, alt: "Expense Proof", class: "w-32 h-32 rounded-full object-cover border-4 border-indigo-600 shadow-lg" %>
        <% else %>
          <div class="w-32 h-32 rounded-full bg-gray-300 flex items-center justify-center text-xl text-gray-600 font-semibold shadow-lg">
            <span>No Image</span>
          </div>
        <% end %>
      </div>

      <hr class="border-gray-500">

      <div class="flex justify-between items-center">
        <strong class="text-white text-lg font-semibold">Submitted By:</strong>
        <p class="text-gray-300 text-lg"><%= @expense.user.email %></p>
      </div>

      <hr class="border-gray-500">

      <div class="flex justify-between items-center">
        <strong class="text-white text-lg font-semibold">Created At:</strong>
        <p class="text-gray-300 text-lg"><%= @expense.created_at %></p>
      </div>

      <hr class="border-gray-500">

      <div class="flex justify-between items-center">
        <strong class="text-white text-lg font-semibold">Updated At:</strong>
        <p class="text-gray-300 text-lg"><%= @expense.updated_at %></p>
      </div>
    </div>

    <div class="mt-6">
      <%= link_to 'Back to Expenses', expenses_path, class: 'px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300' %>
      <%#= link_to 'Edit', edit_expense_path(@expense), class: 'ml-4 px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600' %>
      <%#= button_to 'Delete', expense_path(@expense), method: :delete, data: { confirm: 'Are you sure you want to delete this expense?' }, class: 'ml-4 px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600' %>
    </div>

  </div>
</div>

