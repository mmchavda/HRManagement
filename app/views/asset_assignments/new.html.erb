<div class="bg-white p-6 rounded-2xl shadow-md max-w-xl mx-auto mt-6">
  <h2 class="text-2xl font-semibold text-gray-800 mb-6 border-b pb-2">Assign Asset: <%= @asset.name %></h2>

  <%= form_with url: asset_asset_assignments_path(@asset), method: :post, local: true do |f| %>
    <div class="mb-5">
      <%= label_tag :user_id, "Select User", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= select_tag :user_id,
          options_from_collection_for_select(@users, :id, :full_name),
          prompt: "Choose a user",
          class: "block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
      %>
    </div>

    <div class="mb-5">
      <%= label_tag :comments, "Comments (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= text_area_tag :comments, nil,
          rows: 3,
          class: "block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
      %>
    </div>

    <div class="flex justify-end gap-4">
      <%= link_to "Cancel", @asset, class: "text-gray-600 hover:text-gray-900 underline text-sm" %>
      <%= submit_tag "Assign Asset", class: "bg-indigo-600 hover:bg-indigo-700 text-white px-5 py-2 rounded-md text-sm font-medium shadow-sm transition duration-200" %>
    </div>
  <% end %>
</div>
