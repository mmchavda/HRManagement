<div class="container mx-auto py-12">
  <div class="flex justify-between items-center"> <!-- Flex container -->
    
    <!-- Image Section -->
    <div class="w-2/3">
      <%= image_tag '/show_bg.png', alt: 'ticketbg', class: 'w-3/4 h-auto rounded-lg shadow-lg', size: '600x600' %>
    </div>

    <!-- Content Section -->
    <div class="w-1/3 show"> <!-- Adjust the width as needed -->
      <div class="max-w-4xl mx-auto shadow-xl rounded-xl p-8 bg-white relative">
        
        <!-- Heading for the Right Section -->
        <div class="text-center mb-8">
          <h2 class="text-2xl font-semibold text-gray-800">User Profile Details</h2>
        </div>

        <!-- Profile Info Section -->
        <div class="space-y-8">

				<!-- Second Pair of Labels (Username and Email) -->
				<div class="flex justify-between custom_ui">
					
					<div class="w-1/2 pl-4">
						<strong class="text-black text-lg font-semibold">Email</strong>
						<p class="text-gray-800 text-lg text-left"><%= @user.email %></p>
					</div>
					
				</div >	
          
          <!-- First Pair of Labels (First Name and Last Name) -->
          <div class="flex justify-between custom_ui">
            <div class="w-1/2 pr-4">
              <strong class="text-black text-lg font-semibold">First Name</strong>
              <p class="text-gray-800 text-lg text-left"><%= @user.first_name.capitalize %></p>
            </div>
            <div class="w-1/2 pl-4">
              <strong class="text-black text-lg font-semibold">Last Name</strong>
              <p class="text-gray-800 text-lg text-left"><%= @user.last_name.capitalize %></p>
            </div>
          </div>

					<div class="flex justify-between custom_ui">

            <div class="w-1/2 pr-4">
              <strong class="text-black text-lg font-semibold">Username</strong>
              <p class="text-gray-800 text-lg text-left"><%= @user.username %></p>
            </div>

						<div class="w-1/2 pr-4">
							<strong class="text-black text-lg font-semibold">Gender</strong>
							<p class="text-gray-800 text-lg text-left"><%= @user.gender.capitalize %></p>
						</div>
          </div>

         


          <!-- Other User Info -->
          <div class="flex justify-between custom_ui">
            
						<div class="w-1/2 pr-4">
							<strong class="text-black text-lg font-semibold">Phone Number</strong>
							<p class="text-gray-800 text-lg text-left"><%= @user.phone_number %></p>
						</div>

            <div class="w-1/2 pl-4">
              <strong class="text-black text-lg font-semibold">Blood Group</strong>
              <p class="text-gray-800 text-lg text-left"><%= @user.blood_group %></p>
            </div>
          </div>  
          
          <div class="flex justify-between custom_ui">
           
            <div class="w-1/2 pl-4">
              <strong class="text-black text-lg font-semibold">Bio</strong>
              <p class="text-gray-800 text-lg text-left"><%= @user.bio %></p>
            </div>

						<div class="w-1/2 pr-4">
              <strong class="text-black text-lg font-semibold">Age</strong>
              <p class="text-gray-800 text-lg text-left"><%= ((Date.today - @user.dob.to_date).to_i / 365.25).to_i if @user.dob.present? %></p>
            </div>

          </div>

          <div class="flex justify-between custom_ui">
            <div class="w-1/2 pl-4">
              <strong class="text-black text-lg font-semibold">Created At</strong>
              <p class="text-gray-800 text-lg text-left"><%= @user.created_at.strftime('%B %d, %Y %I:%M %p') %></p>
            </div>
          </div>

          <div class="flex justify-between custom_ui">
            <div class="w-1/2 pr-4">
              <strong class="text-black text-lg font-semibold">Updated At</strong>
              <p class="text-gray-800 text-lg text-left"><%= @user.updated_at.strftime('%B %d, %Y %I:%M %p') %></p>
            </div>
          </div>

        </div>

        <!-- Update Profile Button -->
        <div class="mt-6 flex space-x-4">
          <%= link_to 'Update Profile', edit_user_path(@user), class: 'px-6 py-3 bg-blue-500 text-white font-semibold rounded-lg shadow-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300 ease-in-out transform hover:scale-105' %>
        </div>

      </div>
    </div>  
  </div> <!-- End of Flex container -->
</div>

