<div class="container mx-auto py-12">
  <div class="flex justify-between items-center"> <!-- Flex container -->

    <!-- Content Section -->
    <div class="show"> <!-- Adjust the width as needed -->
      <div class="flex justify-between custom_ui bg-black">
        <%= link_to 'Update Profile', edit_user_path(@user), class: 'px-6 py-3 text-white' %>

      </div>  

      <div class="mx-auto shadow-xl MY_BOX bg-white relative">
        <div class="flex justify-between custom_ui bg-gray-300", style="margin-bottom: 20px; margin-top: 20px; ">
        <h1 class="text-2xl font-semibold text-black">User Details</h1>
        </div>
        
        <div class="p-8">
          <!-- Heading for the Right Section -->

          <!-- Profile Info Section -->
          <div class="space-y-8">

          <!-- Second Pair of Labels (Username and Email) -->
          <div class="flex justify-between custom_ui">
            
            <div class="w-1/2 pl-4">
              <p><strong class="text-black text-lg font-semibold">Email</strong>
              <%= @user.email %></p>
            </div>
          </div >	
            
            <!-- First Pair of Labels (First Name and Last Name) -->
            <div class="flex justify-between custom_ui">
              <div class="w-1/2 pr-4">
                <p><strong class="text-black text-lg font-semibold">First Name</strong>
                <%= @user.first_name&.capitalize %></p>
              </div>
            </div>  
            <div class="flex justify-between custom_ui">

              <div class="w-1/2 pl-4">
                <p><strong class="text-black text-lg font-semibold">Last Name</strong>
                <%= @user.last_name&.capitalize %></p>
              </div>
            </div>

            <div class="flex justify-between custom_ui">

              <div class="w-1/2 pr-4">
                <p><strong class="text-black text-lg font-semibold">Username</strong>
                <%= @user.username %></p>
              </div>
            </div>
            <div class="flex justify-between custom_ui">

              <div class="w-1/2 pr-4">
                <p><strong class="text-black text-lg font-semibold">Gender</strong>
                <%= @user.gender&.capitalize %></p>
              </div>
            </div>

            <!-- Other User Info -->
            <div class="flex justify-between custom_ui">
              
              <div class="w-1/2 pr-4">
                <p><strong class="text-black text-lg font-semibold">Phone Number</strong>
                <%= @user.phone_number %></p>
              </div>
            </div>
            <div class="flex justify-between custom_ui">

              <div class="w-1/2 pl-4">
                <p><strong class="text-black text-lg font-semibold">Blood Group</strong>
                <%= @user.blood_group %></p>
              </div>
            </div>  
            
            <div class="flex justify-between custom_ui">
            
              <div class="w-1/2 pl-4">
                <p><strong class="text-black text-lg font-semibold">Role</strong>
                <%= @user.role %></p>
              </div>
            </div>
            <div class="flex justify-between custom_ui">

              <div class="w-1/2 pr-4">
                <p><strong class="text-black text-lg font-semibold">Date Of Birth</strong>
                <%= @user.dob.to_date if @user.dob.present? %></p>
              </div>

            </div>

            <div class="flex justify-between custom_ui">
              <div class="w-1/2 pl-4">
                <p><strong class="text-black text-lg font-semibold">Bio</strong>
                <%= @user.bio %></p>
              </div>
            </div>
          </div>  

        </div>

      </div>
    </div>  
  </div> <!-- End of Flex container -->
</div>

