    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.25);
  }

  .transition {
    transition: transform 0.2s ease-in-out;
  }

  .text-center {
    text-align: center;
  }

  .text-2xl {
    font-size: 1.5rem;
  }

  .text-gray-800 {
    color: #2d3748;
  }

  .font-semibold {
    font-weight: 600;
  }

