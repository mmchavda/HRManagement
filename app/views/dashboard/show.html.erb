  .container {
    width: 100%;
    margin: 0 auto;
    display: block;
    background: linear-gradient(135deg, #1f1f1f, #2b2b2b);  
    height: 100%;
  }

  .shadow-xl {
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
  }

  .p-8 {
    padding: 2rem;
  }

  .max-w-4xl {
    width: 90%;
    margin: 0 auto;
  }

  .space-y-8 {
    gap: 2rem;
  }

  hr {
    border: 1px solid #4a5568;
    margin: 1.5rem 0;
  }

  .bg-blue-500 {
    background-color: #3182ce;
  }

  .hover\:bg-blue-600:hover {
    background-color: #2b6cb0;
  }

  .text-white {
    color: #ffffff;
  }

  .rounded-md {
    border-radius: 8px;
  }

  .px-4 {
    padding-left: 1rem;
    padding-right: 1rem;
  }

  .py-2 {
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
  }

  .text-sm {
    font-size: 0.875rem;
  }

  .font-medium {
    font-weight: 500;
  }

  .hover\:shadow-lg:hover {
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.25);
  }

  .transform {
    transition: transform 0.3s ease;
  }

  .hover\:scale-105:hover {
    transform: scale(1.05);
  }
</style>
