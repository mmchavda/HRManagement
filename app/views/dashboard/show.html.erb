<div class="container mx-auto py-12">
  <div class="max-w-4xl mx-auto shadow-xl rounded-xl p-8 bg-gray-800 relative">

    <!-- User Info Section -->
    <div class="space-y-8">
      <div class="flex justify-between items-center">
        <strong class="text-white text-lg font-semibold">First Name:</strong>
        <p class="text-gray-300 text-lg"><%= @user.first_name %></p> 
      </div>

      <hr class="border-gray-500">

      <div class="flex justify-between items-center">
        <strong class="text-white text-lg font-semibold">Last Name:</strong>
        <p class="text-gray-300 text-lg"><%= @user.last_name %></p>
      </div>

      <hr class="border-gray-500">

      <div class="flex justify-between items-center">
        <strong class="text-white text-lg font-semibold">Username:</strong>
        <p class="text-gray-300 text-lg"><%= @user.username %></p>
      </div>

      <hr class="border-gray-500">

      <div class="flex justify-between items-center">
        <strong class="text-white text-lg font-semibold">Email:</strong>
        <p class="text-gray-300 text-lg"><%= @user.email %></p>
      </div>

      <hr class="border-gray-500">

      <div class="flex justify-between items-center">
        <strong class="text-white text-lg font-semibold">Phone Number:</strong>
        <p class="text-gray-300 text-lg"><%= @user.phone_number %></p>
      </div>

      <hr class="border-gray-500">

      <div class="flex justify-between items-center">
        <strong class="text-white text-lg font-semibold">Date of Birth:</strong>
        <p class="text-gray-300 text-lg"><%= @user.dob %></p>
      </div>

      <hr class="border-gray-500">

      <div class="flex justify-between items-center">
        <strong class="text-white text-lg font-semibold">Age:</strong>
        <p class="text-gray-300 text-lg"><%= ((Date.today - @user.dob.to_date).to_i / 365.25).to_i if @user.dob.present? %></p>
      </div>

      <hr class="border-gray-500">

      <div class="flex justify-between items-center">
        <strong class="text-white text-lg font-semibold">Blood Group:</strong>
        <p class="text-gray-300 text-lg"><%= @user.blood_group %></p>
      </div>

      <hr class="border-gray-500">

      <div class="flex justify-between items-center">
        <strong class="text-white text-lg font-semibold">Gender:</strong>
        <p class="text-gray-300 text-lg"><%= @user.gender %></p>
      </div>

      <hr class="border-gray-500">

      <div class="flex justify-between items-center">
        <strong class="text-white text-lg font-semibold">Bio:</strong>
        <p class="text-gray-300 text-lg"><%= @user.bio %></p>
      </div>

    </div>
    
    <!-- Position the Update Profile Button -->
    <div class="absolute top-4 right-4">
      <%= link_to 'Update My Profile', edit_dashboard_path(current_user), class: 'bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md text-sm font-medium shadow-md hover:shadow-lg transition duration-200 ease-in-out transform hover:scale-105' %>
    </div>

  </div>
</div>

