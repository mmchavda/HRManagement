<h1 class="text-3xl font-semibold mb-6">Dashboard</h1>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-6">
  <!-- Total Expenses -->
  <div class="bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-xl font-medium">Total Expenses</h2>
    <p class="text-2xl text-gray-800">$<%= @total_expenses %></p>
  </div>
  <!-- Total Tickets -->
  <div class="bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-xl font-medium">Total Tickets</h2>
    <p class="text-2xl text-gray-800"><%= @ticket_counts.values.sum %></p>
  </div>
</div>

<div class="bg-white p-6 rounded-lg shadow-md">
  <%= pie_chart({ data: @expenses_by_category, height: '300px' }) %>
</div>
<div class="bg-white p-6 rounded-lg shadow-md">
  <%= bar_chart({ data: @ticket_counts, height: '300px' }) %>
</div>

<div class="bg-white p-6 rounded-lg shadow-md mb-6">
  <h3 class="text-xl font-medium mb-4">Recent Expenses</h3>
  <table class="min-w-full table-auto">
    <thead>
      <tr>
        <th class="px-4 py-2 text-left">Amount</th>
        <th class="px-4 py-2 text-left">Category</th>
        <th class="px-4 py-2 text-left">Date</th>
        <th class="px-4 py-2 text-left">Description</th>
      </tr>
    </thead>
    <tbody>
      <% @recent_expenses.each do |expense| %>
        <tr>
          <td class="border-t px-4 py-2"><%= expense.amount %></td>
          <td class="border-t px-4 py-2"><%= expense.category %></td>
          <td class="border-t px-4 py-2"><%= expense.date %></td>
          <td class="border-t px-4 py-2"><%= expense.description %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="bg-white p-6 rounded-lg shadow-md">
  <h3 class="text-xl font-medium mb-4">Recent Tickets</h3>
  <table class="min-w-full table-auto">
    <thead>
      <tr>
        <th class="px-4 py-2 text-left">Title</th>
        <th class="px-4 py-2 text-left">Status</th>
        <th class="px-4 py-2 text-left">Date</th>
      </tr>
    </thead>
    <tbody>
      <% @recent_tickets.each do |ticket| %>
        <tr>
          <td class="border-t px-4 py-2"><%= ticket.title %></td>
          <td class="border-t px-4 py-2"><%= ticket.status %></td>
          <td class="border-t px-4 py-2"><%= ticket.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
