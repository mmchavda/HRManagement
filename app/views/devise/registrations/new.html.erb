<div class="w-full h-screen bg-cover bg-center bg-no-repeat flex items-center justify-center" style="background-image: url('/image.png');">
  <div class="bg-opacity-20 backdrop-blur-xl p-8 rounded-xl shadow-2xl w-full max-w-md text-gray-700 bg-gray-200">
    <h2 class="text-3xl font-bold mb-6 inline-flex items-center justify-center">
      Sign Up 
    </h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <% if resource.errors.any? %>
        <div class="bg-red-100 text-red-600 p-4 mb-4 rounded-md">
          <%= resource.errors.full_messages.join(", ") %> 
        </div>
      <% end %>

      <!-- First Name -->
      <div class="mb-4">
        <div class="flex items-center">
          <%= f.label :first_name, class: "block text-sm font-medium text-gray-700" %>
          <span class="text-red-600 ml-1">*</span>
        </div>
        <div class="relative">
          <%= f.text_field :first_name, autofocus: true, required: true, class: "mt-1 block w-full px-3 py-2 pl-10 border border-gray-500 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          <i class="fas fa-user absolute inset-y-0 pl-3 flex items-center text-gray-500"></i>
        </div>
      </div>

      <!-- Last Name -->
      <div class="mb-4">
        <div class="flex items-center">
          <%= f.label :last_name, class: "block text-sm font-medium text-gray-700" %>
          <span class="text-red-600 ml-1">*</span>
        </div>
        <div class="relative">
          <%= f.text_field :last_name, required: true, class: "mt-1 block w-full px-3 py-2 pl-10 border border-gray-500 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          <i class="fas fa-user absolute inset-y-0 pl-3 flex items-center text-gray-500"></i>
        </div>
      </div>
      
      <div class="mb-4">
        <div class="flex items-center">
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <span class="text-red-600 ml-1">*</span>
        </div>
        <div class="relative">
          <%= f.email_field :email, required: true, class: "mt-1 block w-full px-3 py-2 pl-10 border border-gray-500 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          <i class="fas fa-envelope absolute inset-y-0 pl-3 flex items-center text-gray-500"></i>
        </div>
      </div>

      <div class="mb-4">
        <div class="flex items-center">
          <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
          <span class="text-red-600 ml-1">*</span>
        </div>
        <div class="relative">
          <%= f.password_field :password, id: "password_field", autocomplete: "new-password", required: true, class: "mt-1 block w-full pr-10 pl-10 py-2 border border-gray-500 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          <button type="button" onclick="togglePassword('password_field', 'toggle_icon_password')" class="absolute inset-y-0 pl-3 flex items-center text-gray-500 focus:outline-none">
            <i class="fas fa-eye" id="toggle_icon_password"></i>
          </button>
        </div>
      </div>

      <div class="mb-4">
        <div class="flex items-center">
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
          <span class="text-red-600 ml-1">*</span>
        </div>
        <div class="relative">
          <%= f.password_field :password_confirmation, id: "password_confirmation_field", autocomplete: "new-password", required: true, class: "mt-1 block w-full pr-10 pl-10 py-2 border border-gray-500 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          <button type="button" onclick="togglePassword('password_confirmation_field', 'toggle_icon_confirmation')" class="absolute inset-y-0 pl-3 flex items-center text-gray-500 focus:outline-none">
            <i class="fas fa-eye" id="toggle_icon_confirmation"></i>
          </button>
        </div>
      </div>

      <div class="mb-4">
        <%= f.submit "Sign Up", class: "w-full bg-gray-800 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-900 focus:outline-none focus:ring-2 focus:ring-black" %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <p class="text-sm text-gray-600">Already have an account? <%= link_to "Log in", new_user_session_path, class: "text-gray-700 hover:text-gray-700" %></p>
    </div>
  </div>
</div>

<script>
  function togglePassword(fieldId, iconId) {
    const input = document.getElementById(fieldId);
    const icon = document.getElementById(iconId);
    if (input.type === "password") {
      input.type = "text";
      icon.classList.remove("fa-eye");
      icon.classList.add("fa-eye-slash");
    } else {
      input.type = "password";
      icon.classList.remove("fa-eye-slash");
      icon.classList.add("fa-eye");
    }
  }
</script>