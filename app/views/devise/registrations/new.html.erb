<!-- app/views/devise/registrations/new.html.erb -->
<div class="container mx-auto">

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign Up - HR Management</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">

  <!-- Main Content: Sign-Up Form -->
  <main class="py-12">
    <div class="max-w-7xl mx-auto px-4 my_form">
      <div class="bg-white shadow-lg rounded-lg p-8 w-full mx-auto" style="max-width: 500px;">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <% if resource.errors.any? %>
            <div class="bg-red-100 text-red-600 p-4 mb-4 rounded-md">
                <%= resource.errors.full_messages.join(", ") %> 
            </div>
          <% end %>

          <div class="mb-4">
            <div class="flex items-center">
              <%= f.label :email, class: "block text-sm font-medium text-gray-700 inline-flex" %>
              <span class="text-red-600 ml-1">*</span> <!-- Red asterisk for required field -->
            </div>
            <%= f.email_field :email, autofocus: true, required: true, class: "mt-1 block w-full px-3 py-2 border border-gray-700 rounded-md shadow-sm focus:outline-none focus:ring-black focus:border-black sm:text-sm" %>
          </div>

          <div class="mb-4">
            <div class="flex items-center">
              <%= f.label :password, class: "block text-sm font-medium text-gray-700 inline-flex" %>
              <span class="text-red-600 ml-1">*</span> <!-- Red asterisk for required field -->
            </div>
            <%= f.password_field :password, autocomplete: "new-password", required: true, class: "mt-1 block w-full px-3 py-2 border border-gray-700 rounded-md shadow-sm focus:outline-none focus:ring-black focus:border-black sm:text-sm" %>
          </div>

          <div class="mb-4">
            <div class="flex items-center">
              <%= f.label :Confirm_Password, class: "block text-sm font-medium text-gray-700 inline-flex" %>
              <span class="text-red-600 ml-1">*</span> <!-- Red asterisk for required field -->
            </div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true, class: "mt-1 block w-full px-3 py-2 border border-gray-700 rounded-md shadow-sm focus:outline-none focus:ring-black focus:border-black sm:text-sm" %>
          </div>

          <div>
            <%= f.submit "Sign Up", class: "w-full bg-black text-white px-4 py-2 rounded-md hover:bg-black focus:outline-none focus:ring-2 focus:ring-black" %>
          </div>
        <% end %>

        <div class="mt-6 text-center">
          <p class="text-sm text-gray-600">Already have an account? <%= link_to "Log in", new_user_session_path, class: "Black hover:text-black" %></p>
        </div>
      </div>
    </div>
  </main>
</body>
</html>
</div>

<style>
  .container {
    padding: 4rem 0;
    width: 80%;
    margin: 0 auto;
    display: block;
    background: white; 
    height: 100%;
  }
  
  .my_form {
    width: 500px;
    margin: 0 auto;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 2);
  }

  .bg-red-100 {
    background-color: #f8d7da;
  }

  .text-red-700 {
    color: #721c24;
  }

  .focus\:ring-black:focus {
    box-shadow: 0 0 0 2px rgba(0, 0, 0, 0.5);
  }

  .focus\:border-black:focus {
    border-color: #000;
  }
  .bg-black {
    background-color: #000;
  }

</style>