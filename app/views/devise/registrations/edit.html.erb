<div class="container mx-auto py-12">
  <div class="bg-white shadow-lg rounded-lg p-8 w-full mx-auto" style="max-width: 500px;">
    <h2 class="text-2xl font-semibold text-gray-800 mb-6 text-center">Change password</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

      <!-- Display Error Messages -->
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Email Field -->
      <div class="hidden">
        <div class="field mb-4">
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-black focus:border-black" %>
        </div>

        <!-- Confirmation Message -->
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="text-sm text-yellow-600 mb-4">
            Currently waiting confirmation for: <%= resource.unconfirmed_email %>
          </div>
        <% end %>

        <!-- Current Password Field -->
        
      </div>  

      <!-- Current Password Field -->
      <div class="mb-4">
        <div class="flex items-center">
          <%= f.label :current_password, class: "block text-sm font-medium text-gray-700" %>
          <span class="text-red-600 ml-1">*</span>
        </div>
        <div class="relative mt-1">
          <!-- Left unlock icon -->
          <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-500">
            <i class="fas fa-unlock-alt"></i>
          </span>

          <!-- Input with left & right padding -->
          <%= f.password_field :current_password,
                id: "current_password_field",
                autocomplete: "current-password",
                required: true,
                class: "block w-full pl-10 pr-10 py-2 border border-gray-500 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>

          <!-- Eye toggle -->
          <button
            type="button"
            onclick="togglePassword('current_password_field','toggle_icon_current_password')"
            class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-500 focus:outline-none"
          >
            <i class="fas fa-eye" id="toggle_icon_current_password"></i>
          </button>
        </div>
      </div>

      <!-- New Password Field -->
      <div class="mb-4">
        <div class="flex items-center">
          <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
          <span class="text-red-600 ml-1">*</span>
        </div>
        <div class="relative mt-1">
          <!-- Left lock icon -->
          <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-500">
            <i class="fas fa-lock"></i>
          </span>

          <%= f.password_field :password,
                id: "password_field",
                autocomplete: "new-password",
                required: true,
                class: "block w-full pl-10 pr-10 py-2 border border-gray-500 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>

          <button
            type="button"
            onclick="togglePassword('password_field','toggle_icon_password')"
            class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-500 focus:outline-none"
          >
            <i class="fas fa-eye" id="toggle_icon_password"></i>
          </button>
        </div>
      </div>

      <!-- Confirm Password Field -->
      <div class="mb-4">
        <div class="flex items-center">
          <%= f.label :confirm_password, class: "block text-sm font-medium text-gray-700" %>
          <span class="text-red-600 ml-1">*</span>
        </div>
        <div class="relative mt-1">
          <!-- Left check icon -->
          <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-500">
            <i class="fas fa-check"></i>
          </span>

          <%= f.password_field :password_confirmation,
                id: "password_confirmation_field",
                autocomplete: "new-password",
                required: true,
                class: "block w-full pl-10 pr-10 py-2 border border-gray-500 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>

          <button
            type="button"
            onclick="togglePassword('password_confirmation_field','toggle_icon_confirmation')"
            class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-500 focus:outline-none"
          >
            <i class="fas fa-eye" id="toggle_icon_confirmation"></i>
          </button>
        </div>
      </div>


      <!-- Submit Button -->
      <div class="actions mt-6">
        <%= f.submit "Update", class: "w-full bg-gray-800 text-white py-2 px-4 rounded-md hover:bg-gray-900 focus:outline-none focus:ring-2 focus:ring-black" %>
      </div>

    <% end %>
  </div>
</div>

<style>
  .container {
    max-width: 100%;
  }

  .bg-white {
    background-color: white;
  }

  .shadow-lg {
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .rounded-lg {
    border-radius: 0.5rem;
  }

  .p-8 {
    padding: 2rem;
  }

  h2 {
    font-size: 1.5rem;
    font-weight: 600;
    color: #4a4a4a;
  }

  .field {
    margin-bottom: 1.25rem;
  }

  .actions {
    text-align: center;
  }

  .text-center {
    text-align: center;
  }

  .text-yellow-600 {
    color: #f59e0b;
  }

  .text-sm {
    font-size: 0.875rem;
  }
</style>

<script>
  function togglePassword(fieldId, iconId) {
    const input = document.getElementById(fieldId);
    const icon = document.getElementById(iconId);
    if (input.type === "password") {
      input.type = "text";
      icon.classList.remove("fa-eye");
      icon.classList.add("fa-eye-slash");
    } else {
      input.type = "password";
      icon.classList.remove("fa-eye-slash");
      icon.classList.add("fa-eye");
    }
  }
</script>