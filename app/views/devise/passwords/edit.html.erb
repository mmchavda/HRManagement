<div class="container mx-auto py-12">
  <div class="bg-white shadow-2xl rounded-lg p-8 w-full mx-auto" style="max-width: 500px;">
    <h2 class="text-2xl font-semibold text-gray-800 mb-6 text-center">Change Your Password</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <!-- Display error messages -->
      <% if resource.errors.any? %>
        <div class="bg-red-100 text-red-600 p-4 mb-4 rounded-md text-sm">
          <%= resource.errors.full_messages.join(", ") %>
        </div>
      <% end %>
      <%= f.hidden_field :reset_password_token %>
      <!-- New Password Field -->
      <div class="mb-4">
        <div class="flex items-center">
          <%= f.label :password, "New password", class: "block text-sm font-medium text-gray-700" %>
          <span class="text-red-600 ml-1">*</span>
        </div>
        <div class="relative mt-1">
          <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-500">
            <i class="fas fa-lock"></i>
          </span>
          <%= f.password_field :password,
                id: "reset_password_field",
                autocomplete: "new-password",
                autofocus: true,
                class: "block w-full pl-10 pr-10 py-2 border border-gray-500 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          <button
            type="button"
            onclick="togglePassword('reset_password_field', 'toggle_icon_reset')"
            class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-500 focus:outline-none">
            <i class="fas fa-eye" id="toggle_icon_reset"></i>
          </button>
        </div>
      </div>
      <!-- Confirm Password Field -->
      <div class="mb-4">
        <div class="flex items-center">
          <%= f.label :password_confirmation, "Confirm new password", class: "block text-sm font-medium text-gray-700" %>
          <span class="text-red-600 ml-1">*</span>
        </div>
        <div class="relative mt-1">
          <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-500">
            <i class="fas fa-check"></i>
          </span>
          <%= f.password_field :password_confirmation,
                id: "reset_password_confirmation_field",
                autocomplete: "new-password",
                class: "block w-full pl-10 pr-10 py-2 border border-gray-500 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          <button
            type="button"
            onclick="togglePassword('reset_password_confirmation_field', 'toggle_icon_reset_confirmation')"
            class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-500 focus:outline-none">
            <i class="fas fa-eye" id="toggle_icon_reset_confirmation"></i>
          </button>
        </div>
      </div>
      <!-- Submit Button -->
      <div class="actions mt-6">
        <%= f.submit "Change my password", class: "w-full bg-gray-800 text-white py-2 px-4 rounded-md hover:bg-gray-900 focus:outline-none focus:ring-2 focus:ring-black" %>
      </div>
    <% end %>
    <!-- Login link -->
    <div class="mt-6 text-center">
      <p class="text-sm text-gray-600">
        Remembered your password?
        <%= link_to "Log in", new_user_session_path, class: "text-indigo-600 hover:text-indigo-500" %>
      </p>
    </div>
  </div>
</div>

<script>
  function togglePassword(fieldId, iconId) {
    const input = document.getElementById(fieldId);
    const icon = document.getElementById(iconId);
    if (input.type === "password") {
      input.type = "text";
      icon.classList.remove("fa-eye");
      icon.classList.add("fa-eye-slash");
    } else {
      input.type = "password";
      icon.classList.remove("fa-eye-slash");
      icon.classList.add("fa-eye");
    }
  }
</script>